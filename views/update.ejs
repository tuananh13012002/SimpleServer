    <link rel="stylesheet" href="/stylesheets/style.css">
    <title>Update</title>
    <style>
        .divCarUpdate{
            display: flex;
            width: 100%;
            justify-content: center;
        }
        .carUpdate{
            display: flex;
            flex-direction: column;
            width: 50%;
        }
        .carUpdate input{
            margin: 5px;
            padding: 5px;
            border-radius: 5px;
            border: 1px solid black;
        }
        .btnUpdate{
            margin: 5px;
            text-align: center;
        }
        .btnUpdate button{
            border: 1px solid black;
        }
        .btnUpdate button:hover{
            border: 1px solid black;
            background-color: black;
            color: white;
        }
    </style>
</head>
<body class="container">
<% include nav %>
<div class="container" >
    <div class="divCarUpdate">
        <form class="carUpdate" method="post" action="/updateCar" enctype="application/x-www-form-urlencoded">
            <input type="hidden" value="<%=data._id%>" required name="id" >
            <input value="<%=data.tenAnh%>" required name="tenAnh" placeholder="Nhập tên ảnh">
            <input value="<%=data.noiDung%>" required name="noiDung" placeholder="Nội dung">
            <input value="<%=data.linkAnh%>" required name="linkAnh" placeholder="Link ảnh">
            <div class="btnUpdate">
                <button class="btn" type="submit" name="update">Update</button>
            </div>
        </form>
    </div>

</div>
